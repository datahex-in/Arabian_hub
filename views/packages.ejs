<!DOCTYPE html>
<html lang="en">


<body>
    <!-- ========== Start header navbar ========== -->
    <%-include("header.ejs")%>
        <!-- ========== End navbar ========== -->

        <!-- ========== Start home_Section ========== -->
        <div class="section_sand">
            <div class="section_row_one" style="background-image: url('/images/sandtours/Packages.svg'); width: 100%;">
                <div class="section_experience_one">
                    <div class="section_experience_bar">
                        <hr class="section_bar">
                    </div>
                    <div class="tour_section_header">
                        <h1 class="section_title capitilize ">
                            Packages
                        </h1>
                        <p class="section_content">Discover your next adventure, where every click
                            leads to a new experience. Seamlessly create and organize your travel plans, leaving no
                            destination uncharted.
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- ========== End home_Section ========== -->

        <!-- ========== Start dropdown_Section ========== -->

        <div class="container">
            <div class="dropdown">
                <input class="text-box" type="text" placeholder="Sort by Popularity" readonly>
                <div class="options">
                    <div onclick="show('HTML')">HTML</div>
                    <div onclick="show('CSS')">CSS</div>
                </div>
            </div>
        </div>
        <!-- cards -->
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-6 col-xl-4">

                </div>
            </div>
        </div>
        <!-- ========== End dropdown_Section ========== -->


        <script>
            function show(value) {
                document.querySelector(".text-box").value = value;
            }

            let dropdown = document.querySelector(".dropdown")
            dropdown.onclick = function () {
                dropdown.classList.toggle("active")
            }
        </script>

        <!-- ========== Start footer ========== -->
        <!-- <%-include("footer.ejs")%> -->
        <!-- ========== End footer ========== -->


</body>

</html>